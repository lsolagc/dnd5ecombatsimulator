<div id="<%= dom_id player_class %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= player_class.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Hit die:</strong>
    <%= player_class.hit_die %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= player_class.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Spellcasting modifier:</strong>
    <%= player_class.spellcasting_modifier %>
  </div>
</div>
