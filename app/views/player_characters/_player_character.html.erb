<div id="<%= dom_id player_character %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= player_character.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Level:</strong>
    <%= player_character.level %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Player class:</strong>
    <%= player_character.player_class_id %>
  </div>
</div>
